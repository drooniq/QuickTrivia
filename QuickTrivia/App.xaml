<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QuickTrivia"
             x:Class="QuickTrivia.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="TransparentBlackColor">#33000000</Color>
            <Color x:Key="OrangeGold">#FC7C00</Color>
            <Color x:Key="DarkPurple">#262247</Color>
            <Color x:Key="LighterPurple">#2D2752</Color>
            <Color x:Key="LightestPurple">#4B4974</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>
